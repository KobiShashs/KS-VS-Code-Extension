                "setTimeout(() => {",
                  "try {",
                    "const arr: Product[] = [];",
                    "arr.push(new Product(1, 'Pizza + Drink + Icecream', 69.9, 100));",
                    "arr.push(new Product(2, '2 Litter buttle ', 4.99, 100));",
                    "arr.push(new Product(3, 'Mambo Jambo Coffee ', 8.99, 50));",
                    "successCallbabk(arr);",
                  "} catch (err) {",
                    "failureCallback(err);",
